<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <template id="report_return_order_view">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
          <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <t t-set="address">
              <t t-if="doc.type_partner == 'customer'">
                <div t-field="doc.partner_id"
                  t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
              </t>
              <t t-if="doc.type_partner == 'supplier'">
                <div t-field="doc.supplier_id"
                  t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
              </t>
            </t>
          <div class="page">
            <div class="oe_structure"/>
              <h2>
                  Return Order : <span t-field="doc.name"/>
              </h2>
          </div>
          <div class="row mt32 mb32" id="informations">
            <div t-if="doc.date" class="col-auto mw-100 mb-2">
              <strong>Date Ordered:</strong>
              <p class="m-0" t-field="doc.date"/>
            </div>
            <div t-if="doc.type_partner" class="col-auto mw-100 mb-2">
              <strong>Partner Type:</strong>
              <p class="m-0" t-field="doc.type_partner"/>
            </div>
          </div>
          <table class="table table-sm o_main_table">
            <thead>
              <tr>
                <!-- TODO: remove in master -->
                <th class="text-left">Sale Type</th>
                <th class="text-left">Sales Order</th>
                <th class="text-left">Purchase Order</th>
                <th class="text-left" t-if="doc.type_partner == 'customer'">Return Option</th>
                <th class="text-left" t-if="doc.type_partner == 'supplier'">Return Option</th>
                <th class="text-left">Product</th>
                <th class="text-right">Quantity</th>
                <th class="text-right">Unit Price</th>
                <th class="text-right">Total</th>
                <th class="text-right">Subtotal</th>
              </tr>
            </thead>
                <tbody class="sale_tbody">
                    <t t-foreach="doc.line_ids" t-as="line">
                      <tr>
                        <td><span t-field="line.sale_type"/></td>
                        <t>
                          <td><span t-field="line.sale_order_id"/></td>
                        </t>
                        <t>
                          <td><span t-field="line.purchase_order_id"/></td>
                        </t>
                        <t t-if="doc.type_partner == 'customer'">
                          <td><span t-field="line.return_option"/></td>
                        </t>
                        <t t-if="doc.type_partner == 'supplier'">
                          <td><span t-field="line.return_option_po"/></td>
                        </t>
                        <td><span t-field="line.product_id.name"/></td>
                        <td class="text-right"><span t-field="line.qty"/></td>
                        <td class="text-right"><span t-field="line.unit_price"/></td>
                        <td class="text-right"><span t-field="line.value_before_tax"/></td>
                        <td class="text-right"><span t-field="line.value" t-options='{"widget": "float", "precision": 2}'/></td>
                      </tr>
                    </t>
                </tbody>
            </table>
            <div class="clearfix">
              <div id="total" class="row" name="total">
                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                        <table class="table table-sm">
                            <tr class="border-black">
                                <td><strong>Subtotal</strong></td>
                                <td class="text-right">
                                  <span t-esc="doc.amount_untaxed" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                              <td><strong>Tax</strong></td>
                              <td class="text-right">
                                <span t-esc="doc.amount_tax" t-options='{"widget": "float", "precision": 2}'/>
                              </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                  <span t-esc="doc.amount_total" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
          </t>
        </t>
      </t>
    </template>

    <report
      id="report_return_order"
      model="return.order"
      string="Return Order"
      name="sale_return.report_return_order_view"
      file="sale_return.report_return_order_view"
      report_type="qweb-pdf"/>
    </data>
</odoo>