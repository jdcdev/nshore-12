<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_partner_form_inherit_nss_customer_customisation" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='child_ids']/form//field[@name='name']" position="before">
                <field name="default_delivery" attrs="{'invisible': [('type','!=', 'delivery')]}"/>
            </xpath>
        </field>
    </record>

</odoo>