<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_daily_monthly_invoices">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div class="header" style="padding-top:25px !important;">
                    <div class="col-xs-12">
                        <h3>
                            Daily/Monthly Invoices
                        </h3>
                        <span t-esc="date"/>
                    </div>
                </div>
                <div class="page">
                    <div style="border:1px solid black;height:0px;"></div>
                    <table width="100%">
                        <thead>
                            <th>Date</th>
                            <th style="text-align: center;">Inv #</th>
                            <th style="text-align: center;">Cust #</th>
                            <th style="text-align: center;">Name</th>
                            <th style="text-align: center;">User</th>
                            <th style="text-align: center;">Amount</th>
                            <th style="text-align: center;">Discount</th>
                            <th style="text-align: center;">Tax</th>
                            <th style="text-align: center;">Total</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="9">
                                    <div style="border:1px solid black;height:0px;"></div>
                                    <br/>
                                    <div style="border:1px solid black;height:0px;"></div>
                                </td>
                            </tr>
                            <t t-set="total_amount" t-value="0"/>
                            <t t-set="total_discount" t-value="0"/>
                            <t t-set="total_tax" t-value="0"/>
                            <t t-set="total" t-value="0"/>
                            <tr t-foreach="lines_data" t-as="b">
                                <td>
                                    <span t-esc="b.get('date')"/>
                                </td>
                                <td style='text-align: center; padding: 5px;'>
                                    <span t-esc="b.get('number')"/>
                                </td>
                                <td style='text-align: center; padding: 5px;'>
                                    <span t-esc="b.get('cust_no')"/>
                                </td>
                                <td style='text-align: center; padding: 5px;'>
                                    <span t-esc="b.get('customer')"/>
                                </td>
                                <td style='text-align: center; padding: 5px;'>
                                    <span t-esc="b.get('user')"/>
                                </td>
                                <td style='text-align: center; padding: 5px;'>
                                    <span t-esc="b.get('amount')"
                                          t-options="{'widget': 'monetary', 'display_currency': currency_id}"/>
                                    <t t-set="total_amount" t-value="total_amount+b.get('amount')"/>
                                </td>
                                <td style='text-align: center; padding: 5px;'>
                                    <span t-esc="b.get('discount')"
                                          t-options="{'widget': 'monetary', 'display_currency': currency_id}"/>
                                    <t t-set="total_discount" t-value="total_discount+b.get('discount')"/>
                                </td>
                                <td style='text-align: center; padding: 5px;'>
                                    <span t-esc="b.get('tax')"
                                          t-options="{'widget': 'monetary', 'display_currency': currency_id}"/>
                                    <t t-set="total_tax" t-value="total_tax+b.get('tax')"/>
                                </td>
                                <td style='text-align: center; padding: 5px;'>
                                    <span t-esc="b.get('total')"
                                          t-options="{'widget': 'monetary', 'display_currency': currency_id}"/>
                                    <t t-set="total" t-value="total+b.get('total')"/>
                                </td>
                            </tr>
                        </tbody>
                        <tr>
                            <td colspan="9">
                                <div style="border:1px solid black;height:0px;"></div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="5">
                                <br/><br/>
                                <span t-esc="date"/>
                            </td>
                            <td style='text-align: center; padding: 5px;'>
                                <strong><span t-esc="total_amount"
                                      t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></strong>
                                <div style="border:1px solid black;height:0px;"></div>
                                <br/>
                                <t t-if="lines_total_data">
                                    <strong><t t-esc="lines_total_data[0].get('invoice_total_amount')"
                                       t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></strong>
                                </t>
                                <div style="border:1px solid black;height:0px;margin:1px 0px 1px 0px;"></div>
                                <div style="border:1px solid black;height:0px;"></div>
                            </td>
                            <td style='text-align: center; padding: 5px;'>
                                <strong><span t-esc="total_discount"
                                      t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></strong>
                                <div style="border:1px solid black;height:0px;"></div>
                                <br/>
                                <t t-if="lines_total_data">
                                    <strong><t t-esc="lines_total_data[0].get('discount_total_amount')"
                                       t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></strong>
                                </t>
                                <div style="border:1px solid black;height:0px;margin:1px 0px 1px 0px;"></div>
                                <div style="border:1px solid black;height:0px;"></div>
                            </td>
                            <td style='text-align: center; padding: 5px;'>
                                <strong><span t-esc="total_tax"
                                      t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></strong>
                                <div style="border:1px solid black;height:0px;"></div>
                                <br/>
                                <t t-if="lines_total_data">
                                    <strong><t t-esc="lines_total_data[0].get('amount_tax_total')"
                                       t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></strong>
                                </t>
                                <div style="border:1px solid black;height:0px;margin:1px 0px 1px 0px;"></div>
                                <div style="border:1px solid black;height:0px;"></div>
                            </td>
                            <td style='text-align: center; padding: 5px;'>
                                <strong><span t-esc="total"
                                      t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></strong>
                                <div style="border:1px solid black;height:0px;"></div>
                                <br/>
                                <t t-if="lines_total_data">
                                    <strong><t t-esc="lines_total_data[0].get('total')"
                                       t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></strong>
                                </t>
                                <div style="border:1px solid black;height:0px;margin:1px 0px 1px 0px;"></div>
                                <div style="border:1px solid black;height:0px;"></div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="9">
                                <div style="border:1px solid black;height:0px;"></div>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="footer">
                    <div style="border:1px solid black;height:0px;"></div>
                    <center>
                        Page
                        <span class="page"/>
                        of
                        <span class="topage"/>
                    </center>
                </div>
            </t>

        </t>
    </template>

</odoo>
