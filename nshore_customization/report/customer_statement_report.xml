<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_layout_customer_statement">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="header" style="padding-top:25px !important;">
                        <div class="col-xs-9">
                            <h3>
                                <t t-esc="o.company_id.name" />
                            </h3>
                        </div>
                        <div class="col-xs-3">
                            <span t-if="o.company_id.street" t-field="o.company_id.street" />
                            <span t-field="o.company_id.street2" />
                            <br />
                            <span t-field="o.company_id.city" />, <span t-field="o.company_id.state_id" />, <span t-field="o.company_id.country_id" /><br /><span t-field="o.company_id.zip" /><br /></div>
                    </div>
                    <div class="page">
                        <style type="text/css">
                            table {
                                border-collapse:separate;
                                border:solid black 3px;
                                border-radius:20px;
                                -moz-border-radius:6px;
                            }
                            td:first-child, th:first-child {
                                 border-left: none;
                            }
                        </style>
                        <div class="oe_structure">
                            <br/><br/>
                            <div name="invoice_address" class="col-xs-12" style=" margin-bottom: 20px;">
                                <div class="col-xs-4">
                                    <table width="100%">
                                        <tr>
                                            <th style='padding: 5px;'>
                                                <strong>Billing Address</strong>
                                            </th>
                                        </tr>
                                        <tr>
                                            <td style='padding: 5px;'>
                                                <address t-esc="o" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}" />
                                                <div t-if="o.vat" class="mt16">
                                                    <t t-esc="o.company_id.country_id.vat_label or 'TIN'" />: <span t-field="o.vat" /></div>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-xs-4">
                                    <table width="100%">
                                        <tr>
                                            <th style='padding: 5px;'>
                                                <strong>Shipping Address</strong>
                                            </th>
                                        </tr>
                                        <tr>
                                            <td style='padding: 5px;'>
                                                <address t-esc="o" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}" />
                                                <div t-if="o.vat" class="mt16">
                                                    <t t-esc="o.company_id.country_id.vat_label or 'TIN'" />: <span t-field="o.vat" /></div>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-xs-4">
                                    <h4>Customer <br/><br/> Statement</h4><br/><br/>
                                    Date<span t-esc="date"/>
                                </div>
                            </div>

                            <div style='margin-top:100px;'>
                                <table class="table table-condensed"
                                        style="border-left:solid white 1px;border-right:solid white 1px;border-bottom:solid white 1px;">
                                    <t t-set="total_invoice" t-value="0"/>
                                    <t t-set="total_paid" t-value="0"/>
                                    <t t-set="total_balance" t-value="0"/>
                                    <thead>
                                        <tr style="background-color:black;color:white">
                                            <th>Date</th>
                                            <th>Type</th>
                                            <th>Reference</th>
                                            <th>Invoiced</th>
                                            <th>Paid</th>
                                            <th>Balance</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td colspan="2" class="text-right">
                                                Opening Balance
                                            </td>
                                            <td colspan="3"/>
                                            <td>
                                                <t t-esc="o.credit"/>
                                            </td>
                                        </tr>
                                        <t t-set="total_amount" t-value="o.credit"/>
                                        <tr t-foreach="lines_data" t-as="b">
                                            <t t-set="total_amount" t-value="total_amount+b.get('amount_total')"/>
                                            <td>
                                                <span t-esc="b.get('date_invoice')"/>
                                            </td>
                                            <td>
                                                Invoice
                                            </td>
                                            <td>
                                                <span t-esc="b.get('name')"/>
                                            </td>
                                            <td>
                                                <span t-esc="b.get('amount_total')"/>
                                                <t t-set="total_invoice" t-value="total_invoice+b.get('amount_total')"/>
                                            </td>
                                            <td>
                                                <span t-esc="b.get('amount_total')-b.get('residual')"/>
                                                <t t-set="total_paid" t-value="total_paid+(b.get('amount_total')-b.get('residual'))"/>
                                            </td>
                                            <td>
                                                <span t-esc="total_amount"/>
                                                <t t-set="total_balance" t-value="total_balance+total_amount"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <tbody>
                                        <tr style="background-color:black;color:white">
                                            <td colspan="6">&#160;</td>
                                        </tr>
                                    </tbody>
                                    <tbody>
                                        <tr>
                                            <td>
                                                Totals
                                            </td>
                                            <td colspan="3" class="text-right">
                                                <span t-esc="total_invoice" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                            </td>
                                            <td>
                                                <span t-esc="total_paid" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                            </td>
                                            <td>
                                                <span t-esc="total_balance" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br/><br/>
                                <table width="100%">
                                    <tr>
                                        <td>
                                            <b>Current</b>
                                        </td>
                                        <td>
                                            <b>30 Days</b>
                                        </td>
                                        <td>
                                            <b>60 Days</b>
                                        </td>
                                        <td>
                                            <b>90 + Days</b>
                                        </td>
                                        <td>
                                            <b>On Account</b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="footer">
                        <center>
                            Page
                            <span class="page"/>
                            of
                            <span class="topage"/>
                        </center>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_customer_statement">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="nshore_customization.report_layout_customer_statement" />
            </t>
        </t>
    </template>
</odoo>
