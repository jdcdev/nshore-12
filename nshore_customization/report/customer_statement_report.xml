<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_layout_customer_statement_1">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div t-foreach="lines_data" t-as="o" style="page-break-after: always">
                    <div class="header">
                        <div class="row">
                            <div class="col-8">
                                <h2>
                                    <t style="font-size:30px" t-esc="o.company_id.name" />
                                </h2>
                                <div>
                                    <span t-if="o.company_id.street" t-field="o.company_id.street" />
                                    <span t-field="o.company_id.street2" />
                                    <br />
                                    <span t-field="o.company_id.city" /><span t-field="o.company_id.state_id" /> <span t-field="o.company_id.country_id" /><br /><span t-field="o.company_id.phone" />
                                    <br />
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="text-right">
                                    <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 75px;" alt="Logo"/>
                                </div>
                                <div class="text-right" >
                                    <span style="font-size:25px;" t-esc="date"/>
                                </div>
                            </div>
                         </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <center><h2>Customer Statement</h2></center>
                        </div>
                    </div>
                    <div class="row">
                        <style type="text/css">
                            .div-rounded {
                                border-collapse:separate;
                                border:solid black 3px;
                                border-radius:20px;
                                -moz-border-radius:6px;
                            }
                            .div-data td:first-child, th:first-child {
                                 border-left: none;
                            }
                            .div-rounded td {
                                border-top: none !important;
                            }
                        </style>

                        <div class="col-4">
                            <table width="100%">
                                <tr>
                                    <th style='padding: 5px;'>
                                        <strong>Billing Address</strong>
                                    </th>
                                </tr>
                                <tr>
                                    <td style='padding: 5px;'>
                                        <address t-esc="o" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}" />
                                        <div t-if="o.vat" class="mt16">
                                            <t t-esc="o.company_id.country_id.vat_label or 'TIN'" />: <span t-field="o.vat" /></div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row mt16">
                        <table class="table table-condensed div-data"
                                style="border-left:solid white 1px;border-right:solid white 1px;border-bottom:solid white 1px;border-top:solid white 1px;">
                            <t t-set="total_invoice" t-value="0"/>
                            <t t-set="total_paid" t-value="0"/>
                            <t t-set="total_balance" t-value="0"/>
                            <thead>
                                <tr style="background-color:black;color:white">
                                    <th style="padding-top:0px; padding-bottom:0px;">Date</th>
                                    <th style="padding-top:0px; padding-bottom:0px;">Type</th>
                                    <th style="padding-top:0px; padding-bottom:0px;">Reference</th>
                                    <th class="text-right" style="padding-top:0px; padding-bottom:0px;">Invoiced</th>
                                    <th class="text-right" style="padding-top:0px; padding-bottom:0px;">Due Date</th>
                                    <th class="text-right" style="padding-top:0px; padding-bottom:0px;">Paid</th>
                                    <th class="text-right" style="padding-top:0px; padding-bottom:0px;">Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="2" class="text-right">
                                        Opening Balance
                                    </td>
                                    <td colspan="4"/>
                                    <td class="text-right">
                                        <t t-esc="lines_data[o].get('open_inv_amount', 0)" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                </tr>
                                <t t-set="total_amount" t-value="lines_data[o].get('open_inv_amount', 0)"/>
                                <t t-foreach="date_data" t-as="date">
                                    <!-- <tr>
                                        <td>
                                            <span t-esc="date"/>
                                        </td>
                                    </tr> -->
                                    <tr t-foreach="lines_data[o].get('invoice_line', [])" t-as="new_list">
                                        <t t-if="new_list.get('date_invoice') == date">
                                            <t t-set="line_amount" t-value="new_list.get('amount_total', 0)"/>
                                            <!-- <t t-if="new_list.get('state') == 'paid'">
                                                <t t-set="line_amount" t-value="0"/>
                                            </t> -->
                                            <t t-set="total_amount" t-value="total_amount + line_amount"/>
                                            <td>
                                                <span t-esc="new_list.get('date_invoice')"/>
                                            </td>
                                            <td t-if="new_list.get('type') == 'out_invoice'">
                                                Invoice
                                            </td>
                                            <td t-if="new_list.get('type') == 'out_refund'">
                                                Credit Note
                                            </td>
                                            <td>
                                                <span t-esc="new_list.get('name')"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="new_list.get('amount_total', 0)" t-options='{"widget": "float", "precision": 2}'/>
                                                <t t-set="total_invoice" t-value="total_invoice+new_list.get('amount_total', 0)"/>
                                            </td>
                                            <td class="text-right"><span t-esc="new_list.get('due_date')"/></td>
                                            <td></td>
                                            <td class="text-right">
                                                <span t-esc="total_amount" t-options='{"widget": "float", "precision": 2}'/>
                                                <t t-set="total_balance" t-value="total_balance+total_amount"/>
                                            </td>
                                        </t>
                                    </tr>
                                    <tr t-foreach="lines_data[o].get('payment_line', [])" t-as="payment">
                                        <t t-if="payment.get('pay_date') == date">
                                            <t t-set="line_amount" t-value="payment.get('pay_amount')"/>
                                            <t t-set="total_amount" t-value="total_amount - line_amount"/>
                                            <td>
                                                <span t-esc="payment.get('pay_date')"/>
                                            </td>
                                            <td>
                                                Payment
                                            </td>
                                            <td>
                                                <span t-esc="payment.get('pay_name')"/>
                                            </td>
                                            <td></td>
                                            <td></td>
                                            <td class="text-right">
                                                <span t-esc="payment.get('pay_amount')"/>
                                                <t t-set="total_paid" t-value="total_paid+payment.get('pay_amount')"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="total_amount" t-options='{"widget": "float", "precision": 2}'/>
                                                <t t-set="total_balance" t-value="total_balance+total_amount"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                            <tbody>
                                <tr style="background-color:black;color:white">
                                    <td colspan="7"></td>
                                </tr>
                            </tbody>
                            <tbody>
                                <tr>
                                    <td>
                                        Totals
                                    </td>
                                    <td colspan="3" class="text-right">
                                        <span t-esc="total_invoice" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </td>
                                    <td></td>
                                    <td class="text-right">
                                        <span t-esc="total_paid" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="total_amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row mt16">
                        <table class="table div-rounded" width="100%">
                            <tr>
                                <td class="text-right">
                                    <b>Current</b>
                                </td>
                                <td class="text-right">
                                    <b>30 Days</b>
                                </td>
                                <td class="text-right">
                                    <b>60 Days</b>
                                </td>
                                <td class="text-right">
                                    <b>90 Days</b>
                                </td>
                                <td class="text-right">
                                    <b>90+ Days</b>
                                </td>
                                <td class="text-right">
                                    <b>On Account</b>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right">
                                    <!-- <span t-esc="lines_data[o].get('current_amount', 0)" t-options='{"widget": "float", "precision": 2}'/> -->
                                    <span t-esc="total_amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="lines_data[o].get('between_30days', 0)" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="lines_data[o].get('between_60days', 0)" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="lines_data[o].get('between_90days', 0)" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="lines_data[o].get('plus_90days', 0)" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="lines_data[o].get('on_account', 0)" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <t t-raw="0" />
                    <div class="footer">
                        <div class="text-center col-md-1">
                            <ul class="list-inline">
                                <li class="list-inline-item">Page</li>
                                <li class="list-inline-item"><span class="page"/></li>
                                <li class="list-inline-item">of</li>
                                <li class="list-inline-item"><span class="topage"/></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <template id="report_customer_statement_1">
        <t t-call="web.html_container">
            <t t-call="nshore_customization.report_layout_customer_statement_1" />
        </t>
    </template>
</odoo>
