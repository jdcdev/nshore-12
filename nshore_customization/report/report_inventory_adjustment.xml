<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report template for inventory adjustment-->
    <template id="report_layout_inventory_adjustment">
        <t t-call="web.html_container">
            <div class="header" style="padding-top:7px !important;">
                <div class="row mt32 mb32">
                    <div class="col-8 bm-2">
                        <h3>
                            <t t-esc="docs[0].company_id.name" />
                        </h3>
                    </div>
                    <div class="col-8 bm-4">
                        <span t-if="docs[0].company_id.street" t-field="docs[0].company_id.street" />
                        <span t-field="docs[0].company_id.street2"/>
                        <span t-field="docs[0].company_id.city"/>,<br/>
                        <span t-field="docs[0].company_id.state_id"/>,
                        <span t-field="docs[0].company_id.country_id"/>-<span t-field="docs[0].company_id.zip"/><br/>
                        Phone: <span t-field="docs[0].company_id.phone"/><br/>
                        Email: <span t-field="docs[0].company_id.email"/><br/>
                        <span t-field="docs[0].company_id.website"/><br/>
                    </div>
                </div>
            </div>
            <t t-foreach="docs" t-as="o">
                <div style="page-break-before: always;"/>
                <div class="page">
                    <div class="row" style="text-align:center;">
                        <h3>Inventory Adjustment</h3>
                    </div>
                    <div class="row">
                        <div>
                            <h3>Inventory Reference :- <span t-field="o.name"/></h3>
                            <h3>Inventory Of :- <span t-field="o.filter"/></h3>
                        </div>
                        <div t-if="o.filter == 'category'">
                            <h3>Product Category :- <span t-field="o.category_id"/></h3>
                        </div>
                        <div>
                            <h3>Date :- <span t-esc="context_timestamp(o.date).strftime('%m  /  %d  /  %Y')"/></h3>
                        </div>
                        <div t-if="o.exhausted">
                            <h3>Include Exhausted Products :- True</h3>
                        </div>
                    </div>
                    <div>
                        <br/>
                        <table width="100%">
                            <thead>
                                <tr style="background-color:black;color:white;">
                                    <th style="text-align:left;">Product</th>
                                    <th style="text-align:right;" width="13.33%">Theoretical Quantity</th>
                                    <th style="text-align:right;" width="13.33%">Real Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.line_ids" t-as="l">
                                    <td><span t-field="l.product_id"/></td>
                                    <td style="text-align:right;"><t t-esc="'{0:,.0f}'.format(l.product_qty)"/></td>
                                    <td style="text-align:right;"><t t-esc="'{0:,.0f}'.format(l.theoretical_qty)"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
            <div class="footer">
                <center>Page <span class="page"/> of <span class="topage"/></center>
            </div>
        </t>
    </template>
    <template id="report_inventory_adjustment">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="nshore_customization.report_layout_inventory_adjustment" />
            </t>
        </t>
    </template>
</odoo>
