<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_inherit_nshore" inherit_id="account.report_invoice_document">
        <th t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
            position="attributes">
            <attribute name="style">display: none;</attribute>
        </th>
        <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
            position="attributes">
            <attribute name="style">display: none;</attribute>
        </td>
        <xpath expr="//t[@t-foreach='o.amount_by_group']/tr" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>
        <xpath expr="//p[@name='note']" position="replace">
        </xpath>
        <xpath expr="//div[@name='customer_code']" position="replace">
        </xpath>
    </template>
</odoo>
