<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_inherit_nshore" inherit_id="account.report_invoice_document">
        <xpath expr="//t[@t-set='address']" position="replace"/>
        <xpath expr="//div[@id='informations']" position="replace"/>
        <xpath expr="//h2[1]" position="replace"/>
        <th t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" position="attributes">
            <attribute name="style">display: none;</attribute>
        </th>
        <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" position="attributes">
            <attribute name="style">display: none;</attribute>
        </td>
        <xpath expr="//tr[@class='border-black o_subtotal']" position="after">
            <t t-if="not o.amount_by_group">
                <td><strong>Taxes</strong></td>
                <td class="text-right">
                    <span t-field="o.company_id.currency_id.symbol" /> 0.00
                </td>
            </t>
        </xpath>
        <xpath expr="//p[@name='note']" position="replace">
        </xpath>
        <xpath expr="//div[hasclass('clearfix')]" position="after">
            <div t-if="o.digital_signature" class="mt32 ml64 mr4" name="digital_signature">
                <div class="offset-8">
                    <strong>Signature</strong>
                </div>
                <div class="offset-8">
                    <img t-att-src="image_data_uri(o.digital_signature)" style="max-height: 5cm; max-width: 15cm;"/>
                </div>
                <div class="offset-8 text-center">
                    <p t-field="o.signed_by"/>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@class='page']" position="before">
            <div class="row ml-auto">
                <t t-if="o.partner_shipping_id">
                    <div class="col-4">
                        <strong>Shipping address:</strong>
                        <div>
                            <span t-field="o.partner_shipping_id"/>
                            <br/>
                            <t t-if="o.partner_shipping_id.street">
                                <span t-field="o.partner_shipping_id.street"/>
                            </t>
                            <br/>
                            <span t-field="o.partner_shipping_id.city"/>
                            <span t-field="o.partner_shipping_id.state_id"/>
                            <span t-field="o.partner_shipping_id.zip"/>
                        </div>
                    </div>
                </t>
                <div class="col-4">
                    <div>
                        <span t-field="o.partner_id"/>
                        <br/>
                        <t t-if="o.partner_id.street">
                            <span t-field="o.partner_id.street"/>
                        </t>
                        <br/>
                        <span t-field="o.partner_id.city"/>
                        <span t-field="o.partner_id.state_id"/>
                        <span t-field="o.partner_id.zip"/>
                    </div>
                </div>
                <div class="col-4">
                    <strong><span t-if="o.type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')">Invoice # </span></strong>
                    <strong><span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice # </span></strong>
                    <strong><span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice # </span></strong>
                    <strong><span t-if="o.type == 'out_refund'">Credit Note # </span></strong>
                    <strong><span t-if="o.type == 'in_refund'">Vendor Credit Note # </span></strong>
                    <strong><span t-if="o.type == 'in_invoice'">Vendor Bill # </span></strong>
                    <span t-field="o.number"/>
                    <br/>
                    <t t-if="o.date_invoice">
                        <strong>Invoice Date : </strong><span t-field="o.date_invoice"/>
                    </t>
                    <br/>
                    <t t-if="o.origin">
                        <strong>Source : </strong><span t-field="o.origin"/>
                    </t>
                    <br/>
                    <t t-if="o.date_due">
                        <strong>Source : </strong><span t-field="o.date_due"/>
                    </t>
                    <!-- <strong>Signature : </strong><img style="height:122px;width:366px;"
                                                    t-att-src="'data:image/png;base64,%s' % to_text(o.digital_signature)"/> -->
                   <!--  <div id="image_before" class="col-6 position-relative">
                        <h5 class="pt-3" style="font-size: 15px;">
                            <t t-if="o.digital_signature">
                                <strong>Signature:</strong>
                            </t>
                            <t t-else="">
                                <strong style="position: absolute;left: 13%;right: 0;top: 50%;">
                                    SIGNATURE</strong>
                            </t>
                            <img style="height:122px;width:366px;"
                                 t-att-src="'data:image/png;base64,%s' % to_text(o.digital_signature)"/>
                        </h5>
                    </div> -->
                   <!--  </t> -->
                    <br/>
                    <t t-if="o.reference">
                        <strong>Reference : </strong><span t-field="o.reference"/>
                    </t>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
