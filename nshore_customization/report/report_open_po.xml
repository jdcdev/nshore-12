<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="open_purchase_order_report_template">
        <t t-call="web.external_layout">
            <div class="row mt16">
                <div class="col-8">
                    <strong>Start Date :</strong>
                    <span t-esc="start_date"/>
                </div>
                <div class="col-4 text-right">
                    <strong>End Date :</strong>
                    <span t-esc="end_date"/>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <center>
                        <h2>Open Purchase Order Report</h2>
                    </center>
                    <br/>
                </div>
            </div>
            <div t-foreach="lines_data" t-as="o">
                <div class="row">
                    <t t-set="start_date" t-value="''"/>
                    <t t-set="end_date" t-value="''"/>
                    <span t-esc="lines_data[o].get('start_date')"/>
                    <span t-esc="lines_data[o].get('end_date')"/>
                    <div class="col-12">
                        <t t-if="lines_data[o].get('categ_partner') == 'partner'">
                            <span class="text-left" t-esc="o.name"/>
                        </t>
                        <t t-if="lines_data[o].get('categ_partner') == 'category'">
                            <span class="text-left" t-esc="o.complete_name"/>
                        </t>
                    </div>
                </div>
                <div class="row mt16">
                    <table class="table div-rounded" width="100%">
                        <tr>
                            <td class="text-right">
                                <b>SR. No</b>
                            </td>
                            <td class="text-right">
                                <b>Date</b>
                            </td>
                            <td class="text-left">
                                <b>Product</b>
                            </td>
                            <td class="text-left">
                                <b>Purchase Order</b>
                            </td>
                            <t t-if="lines_data[o].get('categ_partner') == 'partner'">
                                <td class="text-left">
                                    <b>Product Category</b>
                                </td>
                            </t>
                            <td class="text-right">
                                <b>Ordered Qty</b>
                            </td>
                            <td class="text-right">
                                <b>Received Qty</b>
                            </td>
                            <td class="text-right">
                                <b>Backorder Qty</b>
                            </td>
                        </tr>
                        <t t-set="i" t-value="1"/>
                        <tr t-foreach="lines_data[o].get('order_line', [])" t-as="move_list">
                            <td class="text-right">
                                <span t-esc="i"/>
                                <t t-set="i" t-value="i+1"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="move_list.get('date')"/>
                            </td>
                            <td class="text-left">
                                <span t-esc="move_list.get('product')"/>
                            </td>
                            <td class="text-left">
                                <span t-esc="move_list.get('purchase_order')"/>
                            </td>
                            <t t-if="lines_data[o].get('categ_partner') == 'partner'">
                                <td class="text-left">
                                    <span t-esc="move_list.get('categ_id')"/>
                                </td>
                            </t>
                            <td class="text-right">
                                <t t-esc="'{0:,.0f}'.format(move_list.get('product_qty'))"/>
                            </td>
                            <td class="text-right">
                                <t t-esc="'{0:,.0f}'.format(move_list.get('qty_received'))"/>
                            </td>
                            <td class="text-right">
                                <t t-esc="'{0:,.0f}'.format(move_list.get('back_order_qty'))"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </t>
    </template>

    <template id="report_open_po">
        <t t-call="web.html_container">
            <t t-call="nshore_customization.open_purchase_order_report_template"/>
        </t>
    </template>
</odoo>
