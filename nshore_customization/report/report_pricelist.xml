<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <template id="report_layout_product_pricelist">
        <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.html_container">
                    <div class="page">
                        <h3><center><span t-field="o.name"/></center></h3>
                    </div>
                    <table class="table table-sm o_main_table" name="price_list">
                        <thead>
                            <tr>
                                <th>Apply On</th>
                                <th>Product/Product Category</th>
                                <th>Compute Price</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody class="pricelist_tbody">
                            <tr t-foreach="o.item_ids" t-as="line">
                                <td><span t-field="line.applied_on"/></td>
                                <td><span t-field="line.name"/></td>
                                <td><span t-field="line.compute_price"/></td>
                                <td><span t-field="line.price"/></td>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>
    </data>
</odoo>