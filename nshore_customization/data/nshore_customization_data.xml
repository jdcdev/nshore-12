<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron Job to send customer statement report-->
    <record id="account_asset_cron" model="ir.cron">
        <field name="name">Send Customer Statement</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="state">code</field>
        <field name="code">model._send_customer_statement()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">months</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(day=1, months=1)).strftime('%Y-%m-%d 00:00:00')"/>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>
</odoo>
