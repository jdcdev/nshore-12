<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Inherited Invoice form to add some new fields and modify existing.-->
        <record id="view_customer_invoice_form_inherit_nshore"
                model="ir.ui.view">
            <field name="name">account.invoice.form.nshore</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                     <attribute name="context">{'product_search': True}</attribute>
                     <attribute name="options">{"no_quick_create": True}</attribute>
                 </xpath>
                <xpath expr="//field[@name='partner_id']"
                       position="attributes">
                    <attribute name="domain">[('is_company', '=', True)]</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']"
                       position="attributes">
                    <attribute name="widget">integer</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='invoice_line_tax_ids']"
                        position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']"
                        position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date_due']" position="attributes">
                    <attribute name="attrs">{'invisible': [('type', '=', 'out_refund')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="attributes">
                    <attribute name="attrs">{'invisible': [('type', '=', 'out_refund')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="pricelist_id"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']"
                        position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']"
                        position="after">
                    <field name="product_net_cost"/>
                    <field name="product_list_price"/>
                </xpath>
            </field>
        </record>

        <!-- Make Users field readonly -->
        <record id="nss_view_account_invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.form.nss</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="groups_id" eval="[(4, ref('nshore_customization.group_is_salesperson_not_allowed'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- Supplier form inherited to modify or add new data.-->
        <record id="view_supplier_invoice_form_inherit_nshore" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.nshore</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']"
                       position="attributes">
                    <attribute name="domain">[('is_company', '=', True)]</attribute>
                </xpath>
                 <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                     <attribute name="context">{'product_search': True, 'partner_id': parent.partner_id}</attribute>
                 </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']"
                       position="attributes">
                    <attribute name="widget">integer</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']"
                        position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='invoice_line_tax_ids']"
                        position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']"
                        position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- Supplier tree view to add some fields.-->
        <record id="view_supplier_invoice_tree_inherit_nshore" model="ir.ui.view">
            <field name="name">account.invoice.supplier.tree.nshore</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']"
                       position="after">
                    <field name="notes"/>
                </xpath>
            </field>
        </record>

        <!-- Invoice tree view to add some fields.-->
        <record id="nss_view_account_invoice_tree_inherit" model="ir.ui.view">
            <field name="name">account.invoice.tree.nss</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="notes"/>
                </xpath>
            </field>
        </record>

        <!-- Inherited filter view to add some new filters-->
        <record id="view_account_invoice_filter_form_inherit_nshore" model="ir.ui.view">
            <field name="name">account.invoice.filter.form.nshore</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="invoice_line_ids" string="Product" filter_domain="[('invoice_line_ids.product_id', 'ilike', self)]"/>
                    <field name="comment" string="Notes"/>
                </xpath>
            </field>
        </record>

        <!-- Modified action to first open tree view-->
        <record id="account.product_product_action_sellable" model="ir.actions.act_window">
            <field name="view_mode">tree,kanban,form,activity</field>
        </record>

    </data>
</odoo>