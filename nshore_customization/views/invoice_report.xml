<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document_updated" inherit_id="account.report_invoice_document">
            <!-- <xpath expr="//t[@t-call='web.external_layout']" position="replace"> -->
            <!-- <xpath expr="//t[@t-set='o']" position="replace"> -->
            <xpath expr="//t[1]" position="replace">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
                <div class="header" style="padding-top:25px !important;">
                    <div class="col-xs-9">
                        <h3>
                            <t t-esc="o.company_id.name" />
                        </h3>
                    </div>
                    <div class="col-xs-3">
                        <span t-if="o.company_id.street" t-field="o.company_id.street" />
                        <span t-field="o.company_id.street2" />
                        <br />
                        <span t-field="o.company_id.city" />, <span t-field="o.company_id.state_id" />, <span t-field="o.company_id.country_id" /><br /><span t-field="o.company_id.zip" /><br /></div>
                </div>
                <div class="article o_report_layout_standard" style="margin-top:30px !important;">
                    <div class="page">
                        <div class="row">
                            <div name="invoice_address" class="col-xs-12">
                                <table class="table table-condensed" style="width:280px;display: inline-block; border: 0.5px solid black ;margin-right:10px;border-radius: 25px !important;">
                                    <thead>
                                        <tr style="border-bottom:1px solid black;">
                                            <th>
                                                <strong>Billing Address</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr style="border-bottom:1px solid black;">
                                            <td style="border-bottom:1px solid black !important;">
                                                <address t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}" />
                                                <div t-if="o.partner_id.vat" class="mt16">
                                                    <t t-esc="o.company_id.country_id.vat_label or 'TIN'" />: <span t-field="o.partner_id.vat" /></div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <table class="table table-condensed" style="width:280px;display: inline-block;border: 0.5px solid black;margin-right:20px;border-radius: 25px;">
                                    <thead>
                                        <tr>
                                            <th>
                                                <strong>Shipping Address</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr style="border-bottom:1px solid black;">
                                            <td>
                                                <address t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}" />
                                                <div t-if="o.partner_id.vat" class="mt16">
                                                    <t t-esc="o.company_id.country_id.vat_label or 'TIN'" />: <span t-field="o.partner_id.vat" /></div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <table class="table table-condensed" style="width:280px;display: inline-block;" border="0">
                                    <tbody>
                                        <tr style="border: none !important;">
                                            <td style="font-size:30px;border: none !important;" border="0">
                                                <h2>
                                                    <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice</span>
                                                    <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                                    <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                                                    <span t-if="o.type == 'out_refund'">Credit Note</span>
                                                    <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
                                                    <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                                                </h2>
                                            </td>
                                        </tr>
                                        <tr style="border: none !important;">
                                            <td style="border: none !important;">
                                                <strong>Number</strong>
                                            </td>
                                            <td style="border: none !important;">
                                                <strong>
                                                    <t t-esc="o.number" />
                                                </strong>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border: none !important;">
                                                <strong>Date</strong>
                                            </td>
                                            <td style="border: none !important;">
                                                <strong>
                                                    <t t-esc="o.date_invoice" />
                                                </strong>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border: none !important;">
                                                <div name="reference">
                                                    <strong>Reference</strong>
                                                </div>
                                            </td>
                                            <td style="border: none !important;">
                                                <strong><t t-esc="o.partner_id.ref" /></strong>
                                            </td>
                                        </tr>
                                        <tr style="border: 0px;">
                                            <td style="border: none !important;">
                                                <strong>Terms</strong>
                                            </td>
                                            <td style="border: none !important;">
                                                <strong><t t-esc="o.payment_term_id.name" /></strong>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])" />
                        <table class="table table-condensed" name="invoice_line_table">
                            <thead>
                                <tr style="background-color:black;color:white">
                                    <th>Product</th>
                                    <th class="text-right">Quantity</th>
                                    <th class="text-left">Description</th>
                                    <th class="text-right">Price</th>
                                    <th class="text-right">Extention</th>
                                    <t t-if="len(o.tax_line_ids) &gt; 0">
                                        <th class="text-right">Taxes</th>
                                    </t>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <tr t-foreach="o.invoice_line_ids" t-as="l">
                                    <td>
                                        <span t-field="l.product_id.default_code" />
                                    </td>
                                    <td class="hidden">
                                        <span t-field="l.origin" />
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.quantity" />
                                        <span t-field="l.uom_id" groups="product.group_uom" />
                                    </td>
                                    <td>
                                        <span t-field="l.name" />
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_unit" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}" />
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}" />
                                    </td>
                                    <t t-if="len(o.tax_line_ids) &gt; 0">
                                        <td class="text-right">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))" />
                                        </td>
                                    </t>
                                </tr>
                            </tbody>
                        </table>
                        <div class="clearfix">
                            <div id="total" class="row">
                                <div class="col-xs-4 pull-right">
                                    <table class="table table-condensed" style="min-width: 250px;max-width: 400px;"></table>
                                </div>
                            </div>
                        </div>
                        <p t-if="o.comment">
                            <span t-field="o.comment" />
                        </p>
                    </div>
                </div>
                <div class="footer col-xs-12" style="font-size: 16px !important;">
                    <div class="col-xs-12  pull-right">
                        <table class="table table-condensed last-page" style="border-top:10px solid black;">
                            <tr>
                                <td style="border: none !important;"></td>
                                <td style="border: none !important;">
                                    <strong>Amount</strong>
                                </td>
                                <td style="border: none !important;" class="text-right">
                                    <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}" />
                                </td>
                            </tr>
                            <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                <tr>
                                    <t t-if="len(o.tax_line_ids) == 1 and o.amount_untaxed == amount_by_group[2]">
                                        <td style="border: none !important;"></td>
                                        <td style="border: none !important;">
                                            <span t-esc="amount_by_group[0]" />
                                        </td>
                                        <td style="border: none !important;" class="text-right">
                                            <span t-esc="amount_by_group[3]" />
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td style="border: none !important;"></td>
                                        <td style="border: none !important;">
                                            <strong>Sales Tax</strong>
                                        </td>
                                        <td style="border: none !important;" class="text-right">
                                            <span t-esc="amount_by_group[3]" />
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr>
                                <td style="border: none !important;"></td>
                                <td style="border: none !important;">
                                    <strong>Total</strong>
                                </td>
                                <td style="border: none !important;" class="text-right">
                                    <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}" />
                                </td>
                            </tr>
                            <tr>
                                <td style="border: none !important;"></td>
                                <td style="border: none !important;">
                                    <strong>Payments</strong>
                                </td>
                                <td style="border: none !important;" class="text-right">
                                    <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}" />
                                </td>
                            </tr>
                            <tr style="border:none !important;">
                                <td style="border:none !important;">
                                    <strong>Customer Signature</strong>
                                    <span>__________________________</span>
                                </td>
                                <td style="border: none !important;">
                                    <strong>Invoice Balance</strong>
                                </td>
                                <td style="border: none !important;" class="text-right">
                                    <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}" />
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-xs-4 col-xs-offset-3 text-right " style="font-size:14px !important;">
                        <ul class="list-inline">
                            <li>Page</li>
                            <li>
                                <span class="page" />
                            </li>
                            <li>of</li>
                            <li>
                                <span class="topage" />
                            </li>
                        </ul>
                    </div>

                </div>
            </xpath>
        </template>
<!-- 
        <template id="report_invoice_document_with_payments_extend" inherit_id="account.report_invoice_document_with_payments" primary="True">
            <xpath expr="//div[@id='total']" position="replace">

            </xpath>
        </template> -->
    </data>
</odoo>