<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherited tree view of Products stock move lines-->
    <record id="nshore_view_move_line_tree_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.tree</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reference']" position="after">
                <field name="partner_id"/>
            </xpath>
            <xpath expr="//field[@name='qty_done']" position="before">
                <field name="product_onhand_qty"/>
            </xpath>
        </field>
    </record>
    <!--Inherited Form view stock move lines-->
    <record id="nshore_view_move_line_form_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.form</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="before">
                <field name="partner_id"/>
            </xpath>
            <xpath expr="//field[@name='qty_done']" position="after">
                <field name="product_onhand_qty"/>
            </xpath>
        </field>
    </record>
</odoo>