<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view for update pricelist -->
    <record id="view_update_product_pricelist" model="ir.ui.view">
        <field name="name">Update Pricelist Items</field>
        <field name="model">update.product.pricelist.item</field>
        <field name="arch" type="xml">
            <form string="Update Pricelist Items">
                <footer>
                    <button name="update_pricelist_item" string="Update Pricelist Items" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- Action for Update pricelist items -->
    <record id="action_update_pricelist_item" model="ir.actions.act_window">
        <field name="name">Update Pricelist Item</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">update.product.pricelist.item</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_pricelist" />
    </record>
</odoo>
