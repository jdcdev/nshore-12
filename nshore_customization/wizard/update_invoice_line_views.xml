<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view for update Invoice Lines -->
    <record id="view_update_invoice_lines" model="ir.ui.view">
        <field name="name">Update Invoice Lines</field>
        <field name="model">update.account.invoice</field>
        <field name="arch" type="xml">
            <form string="Update Invoice Lines">
                <footer>
                    <button name="update_invoice_lines" string="Update Invoice Lines" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- Action for Update pricelist items -->
    <record id="action_update_invoice_lines" model="ir.actions.act_window">
        <field name="name">Update Invoice Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">update.account.invoice</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_invoice" />
    </record>
</odoo>
