<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_open_po_view" model="ir.ui.view">
        <field name="name">Open Po Report</field>
        <field name="model">open.po.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Open PO Report">
                <group>
                    <group>
                        <field name="start_date" required="1"/>
                        <field name="all_vendor" attrs="{'invisible': [('catgeory_partner', '=', 'category')]}"/>
                        <field name="all_categ" attrs="{'invisible': [('catgeory_partner', '=', 'partner')]}"/>
                    </group>
                    <group>
                        <field name="end_date" required="1"/>
                        <field name="catgeory_partner" required="1"/>
                    </group>
                </group>
                <group>
                    <field name="category_ids" widget="many2many_tags" attrs="{'invisible': ['|', ('all_categ', '=', True),('catgeory_partner', '=', 'partner')]}"/>
                    <field name="partner_ids" widget="many2many_tags" attrs="{'invisible': ['|', ('all_vendor', '=', True),('catgeory_partner', '=', 'category')]}"/>
                </group>
                <footer>
                    <button string="Print" name="print_open_po_report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>

    <record id="action_open_po_report" model="ir.actions.act_window">
        <field name="name">Open PO Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">open.po.report.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_open_po_view"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_print_open_po_report"
        name="Open PO Report"
        parent="purchase.purchase_report"
        action="action_open_po_report"
        groups="account.group_account_manager,account.group_account_user"
       />

</odoo>
