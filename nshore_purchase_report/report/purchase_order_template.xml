<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_purchaseorder_document_inherit" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//table[hasclass('o_main_table')]/thead/tr/th[4]" position="after">
            <th class="text-right"><strong>Received Qty</strong></th>  
        </xpath>
        <xpath expr="//table[hasclass('o_main_table')]/tbody/tr/td[4]" position="after">
            <td class="text-right">
                <span t-field="line.qty_received"/>
            </td>  
        </xpath>
        <xpath expr="//div[@id='informations']" position="replace"/>
        <xpath expr="//t[@t-set='information_block']" position="replace"/>
        <xpath expr="//t[@t-set='address']" position="replace"/>
        <xpath expr="//div[@class='page']" position="before">
            <div class="row ml-auto">
                <div class="col-4">
                    <strong>Shipping address:</strong>
                    <div>
                        <span t-field="o.company_id.partner_id"/>
                        <br/>
                        <t t-if="o.company_id.partner_id.street">
                            <span t-field="o.company_id.partner_id.street"/>
                        </t>
                        <br/>
                        <span t-field="o.company_id.partner_id.city"/>
                        <span t-field="o.company_id.partner_id.state_id"/>
                        <span t-field="o.company_id.partner_id.zip"/>
                    </div>
                </div>
                <div class="col-4">
                    <div>
                        <span t-field="o.partner_id"/>
                        <br/>
                        <t t-if="o.partner_id.street">
                            <span t-field="o.partner_id.street"/>
                        </t>
                        <br/>
                        <span t-field="o.partner_id.city"/>
                        <span t-field="o.partner_id.state_id"/>
                        <span t-field="o.partner_id.zip"/></div>
                </div>
                <div class="col-4">
                    <t t-if="o.name">
                        <strong>Our Order Reference : </strong><span t-field="o.name"/>
                    </t>
                    <t t-if="o.date_order">
                        <strong>Order Date : </strong><span t-field="o.date_order"/>
                    </t>
                    <br/>
                </div>
            </div>
            <br/>
        </xpath>
        <xpath expr="//tr[@t-foreach='o.order_line']/td[1]" position="replace">
            <t t-if="line.code_product">
                <td>
                    <span t-field="line.product_id.display_name"/>
                    <br/>
                    <span t-field="line.code_product"/>
                </td>
            </t>
            <t t-else = "">
               <td>
                   <span t-field="line.name"/>
                </td> 
            </t>
        </xpath>
    </template>
</odoo>