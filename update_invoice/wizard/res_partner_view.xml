<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--Form view of Product List-->
        <record model="ir.ui.view" id="view_partner_external_id_wizard">
            <field name="name">Update Partner Name</field>
            <field name="model">partner.name</field>
            <field name="arch" type="xml">
                <form>
                    <footer>
                        <button name="update_name" type="object" string="Update Partner Name" class="oe_highlight" style="margin-left: 5px;"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window 
            id="partner_external_id_action" 
            multi="True"
            key2="client_action_multi" 
            name="Update Partner Name" 
            res_model="partner.name"
            src_model="res.partner" 
            view_mode="form" 
            target="new" 
            view_type="form"
            view_id="view_partner_external_id_wizard" />

    </data>
</odoo>