<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--Form view of Product List-->
        <record model="ir.ui.view" id="opening_bal_customer_wizard">
            <field name="name">Update Opening Balance</field>
            <field name="model">opening.bal.script</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="file_slect"/>
                    </group>
                    <footer>
                        <button name="update_opening_bal" type="object" string="Update Opening Balance" class="oe_highlight" style="margin-left: 5px;"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_opening_bal_customer" model="ir.actions.act_window">
            <field name="name">Update Opening Balance</field>
            <field name="res_model">opening.bal.script</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem action="action_opening_bal_customer" name="Update Opening Balance" id="menu_opening_bal_customer" parent="contacts.res_partner_menu_config" />
    </data>
</odoo>