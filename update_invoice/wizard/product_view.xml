<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--Form view of Product List-->
        <record model="ir.ui.view" id="view_product_external_id_wizard">
            <field name="name">Calculate Product External ID</field>
            <field name="model">product.external.id</field>
            <field name="arch" type="xml">
                <form>
                    <footer>
                        <button name="calculate_product_external_id" type="object" string="Calculate Product External ID" class="oe_highlight" style="margin-left: 5px;"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window 
            id="product_external_id_action" 
            multi="True"
            key2="client_action_multi" 
            name="Update Product External Id" 
            res_model="product.external.id"
            src_model="product.template" 
            view_mode="form" 
            target="new" 
            view_type="form"
            view_id="view_product_external_id_wizard" />

    </data>
</odoo>